@page "/oprethold"
@using Festival.Shared.Models;
@inject NavigationManager nav
@inject HttpClient Http
@layout LoginLayout
<html>
<body>
    <img src="swag.png" width="124" height="124" style="float:right">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <h1 style="padding:30px">Frivillig Oprettelse</h1>

    <div class="login" style="padding:30px">        
        <label>Holdnavn</label>
        <input type="text" id="hold" class="login" style="width:30%" name="Holdnavn" placeholder="-" @bind="h.holdnavn">
        <label>Opgave</label>
        <input type="text" id="hold" class="login" style="width:30%" name="Opgave" placeholder="-" @bind="h.opgave">
        <label>Antal</label>
        <input type="number" id="hold" class="login" style="width:30%" name="Antal" placeholder="-" @bind="h.antal">
        <br />
        <input type="submit" class="registrering" style="width:30%" value="Opret hold" @onclick="OpretHold">
    </div>
</body>
</html>

@code{
    private Hold h = new();


    public async Task OpretHold()
    {

        await Http.PostAsJsonAsync($"oprethold", h);

        nav.NavigateTo("/koordinator");

    }
}