@page "/tilmeldvagt"
@using Festival.Shared.Models;
@inject NavigationManager nav
@inject HttpClient Http
@layout LoginLayout
<html>
<body>
    <img src="swag.png" width="124" height="124" style="float:right">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <h1 style="padding:30px">Vagt bekræftelse</h1>

    <div class="login" style="padding:30px">
        <label>VagtId</label>
        <input type="number" id="holdId" class="login" style="width:30%" name="VagtId" placeholder="-" @bind="v.vagtid">
        <label>Password</label>
        <input type="text" id="password" class="login" style="width:30%" name="password" placeholder="-" @bind="b.password">
        <label>Beskrivelse</label>
        <input type="number" id="powerlvl" class="login" style="width:30%" name="powerlvl" placeholder="-" @bind="b.powerlvl">
        <br />
        <input type="submit" class="registrering" style="width:30%" value="Opret bruger" @onclick="TilmeldVagt">
    </div>
</body>
</html>

@code{
    private Bruger b = new();
    private Vagter v = new();


    public async Task TilmeldVagt()
    {

        await Http.PostAsJsonAsync($"Tilmeldvagt", b);

    }
}