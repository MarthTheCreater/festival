@page "/opretvagt"
@using Festival.Shared.Models
@inject HttpClient Http
@inject NavigationManager nav


<html>
<body>
    <img src="swag.png" width="124" height="124" style="float:right">

    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">

    <h1 style="padding:30px">Opret vagt</h1>

    <div class="login" style="padding:30px">
        <label>HoldId</label>
        <input type="number" id="HoldId" class="login" style="width:30%" name="HoldId" min="1" placeholder="-" @bind="v.holdId">

        <label>Starttidspunkt</label>
        <p>(skrives i amerikansk format eks: '2022-06-06 15:00'</p>
        <input type="text" id="Starttid" class="login" style="width:30%" name="Starttidspunkt" placeholder="-" @bind="v.starttidspunkt">

        <label>Sluttidspunkt</label>
        <input type="text" id="Sluttid" class="login" style="width:30%" name="Sluttidspunkt" placeholder="-" @bind="v.sluttidspunkt">
        <br />

        <label>Beskrivelse</label>
        <input type="text" id="Beskrivelse" class="login" style="width:30%" name="Beskrivelse" placeholder="-" @bind="v.beskrivelse">
        <br />

        <label>Kapacitet</label>
        <input type="number" id="Kapacitet" class="login" style="width:30%" name="Kapacitet" placeholder="-" @bind="v.kap">
        <br />

        <label>Dag</label>
        <input type="text" id="Dag" class="login" style="width:30%" name="Dag" placeholder="-" @bind="v.dag">
        <br />
       


        <input type="submit" class="registrering" style="width:30%" value="Opret vagt" @onclick="OpretVagt">
    </div>
</body>
</html>


@code{
    
    private Vagter v = new();

    public async Task OpretVagt()
    {

        await Http.PostAsJsonAsync($"OpretVagt", v);

    }

}